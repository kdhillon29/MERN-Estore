{
  "buildCommand": " npm install && npm run build && cd backend && npm install",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/backend/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "builds": [
    {
      "src": "/backend/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ]
}
